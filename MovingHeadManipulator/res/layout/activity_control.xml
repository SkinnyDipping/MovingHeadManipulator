<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <SeekBar
        android:id="@+id/magentaBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cyanBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <SeekBar
        android:id="@+id/yellowBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/magentaBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Switch
        android:id="@+id/startSwitch"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:textColor="@color/RED"
        android:textOff="OFF"
        android:textOn="ON!"
        android:textSize="50sp" />

    <SeekBar
        android:id="@+id/dimmerBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <SeekBar
        android:id="@+id/cyanBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/magentaBar"
        android:layout_below="@+id/dimmerBar"
        android:layout_marginTop="64dp" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yellowBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/music_processor_button_onoff"
        android:textOn="@string/music_processor_button_onoff"
        android:textOff="@string/music_processor_button_onoff" />

</RelativeLayout>
